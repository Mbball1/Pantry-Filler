    print("This is the createRecipe function.")

def removeRecipe():
    """This will remove the specified recipe from the recipes file."""
    print("This is the removeRecipe function.")

def again():
    """This will ask the user if they want to add something else"""
    while True:
        answer = input("Do you want to add something else? Y/N: ")
        if answer.lower() == "yes" or "y":
            return 1
        elif answer.lower() == "no" or "n":
            return 0
        else:
            return -1
    

menu()